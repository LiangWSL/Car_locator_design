<view class='bg-g pa-30'>
  <view class="userinfo">
  <view class="userinfo-avatar">
    <open-data  type="userAvatarUrl"></open-data>
  </view>
  <view class="fo-w fo-30 text-center ma-t10">
    <open-data type="userNickName"></open-data>
  </view>
  </view>

  <view class='pa-t30 pa-b10 panel-between'>
    <view class='btn-1 panel-center item-center write' bindtap='write'>
      <view class='fo-30 ma-l20'>填写订单</view>
    </view>
    <view class='btn-1 panel-center item-center check' bindtap='check'>
      <view class='fo-30 ma-l20'>查看所有订单</view>
    </view>
  </view>

  <view class='panel panel-between item-center ma-t20  border-b' bindtap='navTo'>
    <view class='panel-start item-center'>
      <view class='fo-28'>我的信息</view>
    </view>
  </view>
  <view class='panel panel-between item-center' bindtap='navTo'>
    <view class='panel-start item-center'>
      <view class='fo-28'>我的地址</view>
    </view>
  </view>

  <button class='filter-btn' open-type='contact'>
    <view class='panel panel-between item-center ma-t20 border-b'>
      <view class='panel-start item-center'>
        <view class='fo-28'>微信客服</view>
      </view>
    </view>
  </button>
  <view class='panel panel-between item-center border-b' bindtap='makePhone'>
    <view class='panel-start item-center'>
      <view class='fo-28'>电话客服</view>
    </view>
  </view>
  <view class='panel panel-between item-center' bindtap='navTo'>
    <view class='panel-start item-center'>
      <view class='fo-28'>关于我们</view>
    </view>
  </view>  
</view>
